<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@place, @review], html: { class: "review_form" }) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", id: 'review_rating' %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>

