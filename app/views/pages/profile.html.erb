<div class="container p-4 mt-3">
  <div class="p-1">

    <div class="d-flex justify-content-between">
      <div class="mt-4 p-1">
        <h3>Your account</h3>
      </div>
      <div class="p-1">
        <i class="p-1 fas fa-user-circle fa-5x"></i>
      </div>
    </div>

    <div class="p-1">
      <br>
      <h6>First name:</h6>
      <p><%= current_user.first_name%></p>
      <br>
      <h6>Last name:</h6>
      <p><%= current_user.last_name%></p>
      <br>
      <h6>E-Mail:</h6>
      <p><%= current_user.email%></p>
    </div>
<!--
    <div class="mt-4 p-1" >
      <h6 class="btn btn-outline-primary mt-1 p-3 w-100" id="messages-bordered-a">Add a spot
      </h6>
    </div> -->

    <br><br>

    <div class="p-1">
      <h5 class="ml-2"><%= current_user.places.count %> Spots</h5>
      <div class="mt-4 p-1">
        <div class="align-middle btn btn-outline-light mt-1 p-4 w-100" id="messages-bordered-a"> <%= link_to new_place_path do %><h6>Add a spot</h6>
          <% end %>
        </div>
      </div>


      <div class="mt-3 text-capitalize">
        <% @user.places.each do |place| %>

        <div id="messages-bordered-a">
          <div class="p-2">
            <div class="d-flex justify-content-between">
              <h5><%= link_to place.name, place_path(place) %></h5>
              <p id="grey-text"> <%= link_to "Edit", edit_place_path(place) %></p>
            </div>
            <p id="grey-text"><%= place.address %></p>
            <%= place.description %>
            </div>
          </div>

        <% end %>

      </div>
    </div>

    <br>

    <div class="mt-4 p-1">
      <h5 class="ml-2"><%= current_user.reviews.count %> Reviews</h5>

      <div class="mt-3">
        <% @user.reviews.each do |review| %>

          <div class="mb-2 mt-2 p-2" id="messages-bordered-a">
            <div class="mb-2 p-1">
              <select data-rating= <%= review.rating %> data-id= <%= review.id %> name="" class="review-rating" id= <%= "review-#{review.id}" %> >
                <option value="">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>

            <div class="d-flex p-2">
              <div id="show-rating">
                <%= review.content %>
              </div>

              <div id="show-bucket" >
                <%= link_to review_path(review),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>

    <div class="p-3"><br><br><br>
      <p><%= link_to 'Change password', edit_user_registration_path %></p>
      <p class="mb-0">Unhappy? <%= link_to "Delete your account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>

  </div>
</div>
