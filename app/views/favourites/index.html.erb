<body id="background-favourites">
  <div class="container m-4">
    <h5>
      <span id="banner-typed-text"></span>
    </h5>

    <ul>
      <% @favourites.each do |favourite| %>
        <li>
          <%= link_to (favourite.place).name, place_path(favourite.place) %>
          <%= link_to "🗑️",
                  favourite_path(favourite),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  </div>  
</div>
