<h2>Your favourites list</h2>

<ul>
  <% @favourites.each do |favourite| %>
    <li>
      <%= link_to (favourite.place).name, place_path(favourite.place) %>
      <%= link_to "Delete",
              favourite_path(favourite),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
    </li>
  <% end %>
</ul>
