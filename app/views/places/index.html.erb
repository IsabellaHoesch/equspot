<body id="background_index">

  <div id="map"
    style="width: 100%; height: 450px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="container">

    <form autocomplete="off">
      <div class="p-1">
        <div class="pt-3">
          <%= form_tag places_path, method: :get do %>
          <%= text_field_tag :query, params[:query],
          placeholder: "Search by location", class: "p-3" %>
        </div>

        <div class="form-row mt-2 align-middle pt-2 mt-1">
          <div class="col-8 mt-1 pt-2">
            <%= collection_select :sport, :id, @dropdown, :id, :name, include_blank: true %>
          </div>

          <div class="col-4 pt-2">
            <%= submit_tag "Find", class: "btn btn-outline-light mt-1 p-3 w-100 border-radius-index" %>
          </div>
        </div>

          <% end %>
      </div>
    </form>

    <div class="p-1 mt-2">
      <% @places.each do |place| %>

        <div class="card-trip">

          <% if place.photos.attached? %>
            <%= cl_image_tag place.photos.first.key, crop: :fit %>
          <% else %>
            <%= image_tag 'sports_img.jpg', crop: :fill %>
          <% end %>

          <div class="card-trip-infos mb-1">
            <div>
              <div class="d-flex justify-content-between">
                <div>
                  <h2 class="mt-2" ><%= link_to place.name, place_path(place) %></h2>
                </div>
                <div class="mb-2">
                  <select data-rating= <%= place.average_rating %> data-id= <%= place.id %> name="" class="review-rating" id= <%= "review-#{place.id}" %> >
                    <option value="">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>
              </div>
              <p><strong><%= place.address %></strong></p>
              <div class="d-flex">
                <p><i><%= place.description %></i></p>
              </div>
            </div>

            <%= link_to place_favourites_path(place), method: :post, params: { "favourite[place_id]" => place.id } do %>
            <i class="fas fa-crown"></i>
            <% end %>
          </div>
        </div>
      <% end %>

      <div>
        <div class="btn btn-outline-light p-4 w-100 blue-plus-2">
          <%= link_to new_place_path do %>
          <h6 class="mt-2 blue-plus far fa-plus-square fa-lg"></h6>
          <% end %>
        </div><div class="mt-3"></div>
      </div>

    </div>
  </div>

</body>
